<?xml version="1.0" encoding="utf-8"?>
<components:FormItem xmlns:fx="http://ns.adobe.com/mxml/2009" 
					 xmlns:s="library://ns.adobe.com/flex/spark"
					 xmlns:components="com.aristobot.admin.components.*">
	
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayList;
			
			private var _selectedIndex:int;
			[Bindable]
			public function get selectedIndex():int{
				return _selectedIndex;
			}
			public function set selectedIndex(value:int):void{
				_selectedIndex = value;
			}
			
			public function set options(value:Array):void{
				formInput.dataProvider = new ArrayList(value);
			}
			
			override public function setFocus():void
			{
				formInput.setFocus();
			}
			
			public function clear():void
			{
				selectedIndex = -1;
			}
			
		]]>
	</fx:Script>
	
	
	
	<s:DropDownList id="formInput" width="100%" selectedIndex="@{selectedIndex}" change="onChange(event)"/>
</components:FormItem>